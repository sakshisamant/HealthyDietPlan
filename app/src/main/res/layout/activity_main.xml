<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sakshi.com.healthydietplan.MainActivity"
    android:background="@drawable/newdiet1"
    android:weightSum="1"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2">
        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Your Option"
            android:textAlignment="center"
            android:textColor="#eef2f2"
            android:textSize="35dp"
            android:textStyle="bold"
            android:paddingTop="15dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button1"
            android:layout_width="110dp"
            android:layout_height="100dp"
            android:layout_marginLeft="125dp"
            android:backgroundTint="#71000000"
            android:text="BMI and calorie Calculator"
            android:textAlignment="center"
            android:textColor="#f1f9f8"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="#000000"
            android:layout_gravity="center"/>
        <Button
            android:id="@+id/button3"
            android:layout_width="110dp"
            android:layout_height="100dp"
            android:backgroundTint="#71000000"
            android:text="Calorie Chart"
            android:textAlignment="center"
            android:textColor="#f1f9f8"
            android:textSize="15dp"
            android:layout_margin="20dp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"

            android:background="#000000"
            android:layout_gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


    <Button
        android:id="@+id/button4"
        android:layout_width="110dp"
        android:layout_height="100dp"
        android:layout_alignStart="@+id/button2"
        android:layout_alignTop="@+id/button3"
        android:background="#000000"
        android:backgroundTint="#71000000"
        android:text="Get Your Diet Plan"
        android:textAlignment="center"
        android:textColor="#f1f9f8"
        android:textSize="15dp"
        android:textStyle="bold"
        android:padding="5dp"
        android:layout_gravity="center"
        android:layout_marginLeft="125dp"/>

        <Button
            android:id="@+id/vitamins"
            android:layout_width="110dp"
            android:layout_height="100dp"
            android:background="#000000"
            android:backgroundTint="#71000000"
            android:text="All about Vitamins"
            android:textAlignment="center"
            android:textColor="#f1f9f8"
            android:textSize="15dp"
            android:layout_margin="20dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:padding="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <Button
        android:id="@+id/foodfacts"
        android:layout_width="110dp"
        android:layout_height="100dp"
        android:background="#000000"
        android:backgroundTint="#71000000"
        android:text="Amazing Food Facts"
        android:textAlignment="center"
        android:textColor="#f1f9f8"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_marginLeft="125dp"
        android:layout_gravity="center"
        android:padding="5dp"
        />



        <Button
            android:layout_width="110dp"
            android:layout_height="100dp"
            android:text="Weightloss Tips"
            android:textAlignment="center"
            android:background="#000000"
            android:textColor="#f1f9f8"
            android:textSize="15dp"
            android:backgroundTint="#71000000"
            android:textStyle="bold"
            android:id="@+id/button2"
            android:layout_margin="20dp"
            android:layout_gravity="center"
            />
    </LinearLayout>


</LinearLayout>
